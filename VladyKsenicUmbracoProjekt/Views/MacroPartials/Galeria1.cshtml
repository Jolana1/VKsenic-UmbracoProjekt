@inherits Umbraco.Web.Macros.PartialViewMacroPage
@{
    int imgNb = 1;
  }
<div classs="row">

    @foreach (var img in Umbraco.Media(Udi.Parse(Model.MacroParameters["adresarPreObrazky"].ToString())).Children)
    {

        <div class="col-md-4">
            @if (imgNb < 5)
            {
                <img class="img-responsive" src="@img.Url()" />
            }
            else
            {
                <img class="img-responsive lazy" src="" data-src="@img.Url()" />
            }

        </div>

        imgNb++;
    }
</div>